<?xml version="1.0"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx" title="IR Image Sized">

    <fx:Script><![CDATA[
        import vo.ListData;
        ]]></fx:Script>

    <s:navigationContent>
        <s:Button click="navigator.popToFirstView()" label="Home"/>
        <s:Button click="navigator.popView()" label="Back"/>
    </s:navigationContent>

    <s:actionContent>
        <s:Button click="navigator.pushView(List_ItemRenderer_Bitmap_Sized)" label="Next"/>
    </s:actionContent>

    <s:List width="100%"
            height="100%"
            dataProvider="{ListData.arrayList}"
            horizontalScrollPolicy="off">
        <s:itemRenderer>
            <fx:Component>
                <s:ItemRenderer>
                    <s:Image id="image" width="250" height="250" source="{data.image}" smooth="true"/>
                </s:ItemRenderer>
            </fx:Component>
        </s:itemRenderer>
    </s:List>


</s:View>
